{
    modes: {
        coffee: {
            name: "CoffeeScript",
            highlighter: "ace/mode/coffee",
            extensions: [
                "cs",
                "coffee"
            ],
            commands: {
                "Tools:Check": {
                    scriptUrl: "/default/mode/coffee/check.js",
                    inputs: {
                        text: true
                    },
                    internal: true
                },
                "Tools:CTags": {
                    scriptUrl: "/default/mode/coffee/ctags.js",
                    inputs: {
                        text: true
                    }
                },
                "Tools:Preview": {
                    scriptUrl: "/default/mode/coffee/preview.js",
                    inputs: {
                        text: true
                    }
                },
                "Tools:Compile": {
                    scriptUrl: "/default/mode/coffee/compile.js",
                    inputs: {
                        text: true
                    }
                }
            },
            handlers: {
                check: [
                    "Tools:Check"
                ],
                index: [
                    "Tools:CTags"
                ],
                preview: [
                    "Tools:Preview"
                ]
            }
        }
    }
}
