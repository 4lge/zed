{
    "modes": {
        "markdown": {
            "name": "Markdown",
            "highlighter": "ace/mode/markdown",
            "extensions": ["md", "txt", "markdown"],

            "commands": {
                "Tools:Beautify": {
                    "scriptUrl": "configfs!/default/mode/markdown/beautify.js"
                },
                "Tools:Preview": {
                    "scriptUrl": "configfs!/default/mode/markdown/preview.js"
                }
            },
            
            "events": {
                "preview": ["Tools:Preview"]
            }
        }
    }
}