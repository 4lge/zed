{
    "name": "Zed Promise",
    "short_name": "ZedP",
    "version": "0.11.5",
    "manifest_version": 2,
    "minimum_chrome_version": "27",
    "description": "Offline-capable, feature rich, extensible code editor designed for Chrome",
    "offline_enabled": true,
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "permissions": [
        "storage",
        "webview",
        "identity",
        "syncFileSystem",
        "unlimitedStorage",
        {"fileSystem": ["write", "retainEntries", "directory"]},
        "http://*/",
        "https://*/"
    ],
    "icons": {
        "128": "Icon.png",
        "16": "Icon16.png",
        "48": "Icon48.png"
    },
    "sandbox": {
        "pages": ["sandbox.html"]
    }
}
