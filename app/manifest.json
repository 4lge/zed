{
    "name": "Caelum",
    "version": "0.2.5",
    "manifest_version": 2,
    "minimum_chrome_version": "23",
    "description": "The opiniated text and code editor",
    "offline_enabled": true,
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "permissions": [
        "storage",
        "webview",
        "http://*/",
        "https://*/"
    ],
    "icons": {
        "128": "Icon.png"
    },
    "sandbox": {
        "pages": ["sandbox.html", "preview.html"]
    }
}