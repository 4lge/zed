{
    "name": "Zed",
    "version": "0.8.0",
    "manifest_version": 2,
    "minimum_chrome_version": "27",
    "description": "Rethinking code editing.",
    "offline_enabled": true,
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "permissions": [
        "storage",
        "webview",
        "identity",
        "syncFileSystem",
        "unlimitedStorage",
        {"fileSystem": ["write", "retainEntries", "directory"]},
        "http://*/",
        "https://*/"
    ],
    "icons": {
        "128": "Icon.png",
        "16": "Icon16.png",
        "48": "Icon48.png"
    },
    "sandbox": {
        "pages": ["sandbox.html"]
    }
}