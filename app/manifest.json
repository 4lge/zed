{
    "name": "Zed",
    "version": "0.6.2",
    "manifest_version": 2,
    "minimum_chrome_version": "27",
    "description": "The opiniated text and code editor",
    "offline_enabled": true,
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "permissions": [
        "storage",
        "webview",
        "identity",
        "syncFileSystem",
        {"fileSystem": ["write", "retainEntries", "directory"]},
        "http://*/",
        "https://*/"
    ],
    "icons": {
        "128": "Icon.png"
    },
    "sandbox": {
        "pages": ["sandbox.html"]
    }
}