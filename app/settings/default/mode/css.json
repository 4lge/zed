{
    "modes": {
        "css": {
            "name": "CSS",
            "highlighter": "ace/mode/css",
            "extensions": ["css"],

            "commands": {
                "Tools:Beautify": {
                    "scriptUrl": "settingsfs!/default/mode/css/beautify.js"
                },
                "Tools:Check": {
                    "scriptUrl": "settingsfs!/default/mode/css/check.js"
                },
                "Tools:CTags": {
                    "scriptUrl": "settingsfs!/default/mode/css/ctags.js"
                }
            },
            "events": {
                "change": ["Tools:Check", "Tools:CTags"]
            }
        }
    }
}